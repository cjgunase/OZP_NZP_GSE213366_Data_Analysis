import pandas as pd
from sklearn.decomposition import PCA
import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import Axes3D  # Enables 3D


# Load expression matrix (genes x samples)
data = pd.read_csv("GSE213366_CoRSIV_2023.csv", index_col=0)

# Load metadata
meta = pd.read_csv("sample_tissue_individual_map.csv")

#meta = meta[meta['tissue'] == 'Whole Blood']


data.shape


# Transpose so rows = samples
data_t = data.T

# Use sample_name column as index
meta = meta.set_index("sample_name")

# Match samples in both datasets
common = data_t.index.intersection(meta.index)
data_t = data_t.loc[common]
meta = meta.loc[common]

# Combine PCA coordinates with annotations later
print("Samples used:", len(common))


pca_2d = PCA(n_components=2)
pc2 = pca_2d.fit_transform(data_t)

pc2_df = pd.DataFrame(pc2, index=data_t.index, columns=["PC1", "PC2"])
pc2_df = pd.concat([pc2_df, meta[["tissue", "status"]]], axis=1)

#pc2_df.to_csv("control_blood_PCs.csv")






pca = PCA(n_components=3)
pc = pca.fit_transform(data_t)

pc_df = pd.DataFrame(pc, index=data_t.index, columns=["PC1", "PC2", "PC3"])
pc_df = pd.concat([pc_df, meta[["tissue", "status"]]], axis=1)

pc_df.head()


# Assign marker shapes for status groups
statuses = pc_df["status"].unique()
markers = ['o', '^', 's', 'D', 'P', 'X']  # extend if needed
marker_map = {s: markers[i] for i, s in enumerate(statuses)}

fig = plt.figure(figsize=(10, 8))
ax = fig.add_subplot(111, projection="3d")

for tissue in pc_df["tissue"].unique():
    df_t = pc_df[pc_df["tissue"] == tissue]
    
    for status in df_t["status"].unique():
        df_ts = df_t[df_t["status"] == status]
        
        ax.scatter(
            df_ts["PC1"], df_ts["PC2"], df_ts["PC3"],
            marker=marker_map[status],
            s=60,
            label=f"{tissue} - {status}"
        )

ax.set_xlabel("PC1")
ax.set_ylabel("PC2")
ax.set_zlabel("PC3")
ax.set_title("3D PCA Plot: Tissue + Status")

# Remove duplicate legend entries
handles, labels = ax.get_legend_handles_labels()
unique = dict(zip(labels, handles))
ax.legend(unique.values(), unique.keys(), bbox_to_anchor=(1.3, 1))

plt.tight_layout()
plt.show()


